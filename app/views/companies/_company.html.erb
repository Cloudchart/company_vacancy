<section>
  <header>
    <ul class="main-info">
      <li>
        <%= link_to font_awesome('star-o'), '#', class: 'star-link' %> 
        <%= link_to company.name, company %>
      </li>
      <li>
        <%= company.industry.name %>
      </li>
      <li class="people-size">
        <%= link_to company_people_path(company) do %>
          <%= company.people.size %>
          <%= font_awesome('male') %>
        <% end %>
      </li>
      <li class="vacancies-size">
        <%= link_to company_vacancies_path(company) do %>
          <%= company.vacancies.by_status(:opened).size %>
          <%= font_awesome('briefcase') %>
        <% end %>
      </li>
      <li>
        <%= Country.all.select { |c| c[1] == company.country }.first[0] %>
      </li>
      <%# TODO: add established_on %>
      <li>1995</li>
      <li><%= font_awesome('signal') %></li>
      <li><%= link_to font_awesome('angle-up'), '#' %></li>
    </ul>

    <ul class="additional-info">
      <%# TODO: add social relation %>
      <li>Your friend Dmitry Kirillov and 3 other contacts work here</li>
    </ul>
  </header>

  <div class="content">
    <ul class="charts">
      <li>
        <div class="chart-preview"></div>
        <strong>Main chart</strong>
      </li>
      <li>
        <div class="chart-preview"></div>
        Demo chart
      </li>
      <li>
        <div class="chart-preview"></div>
        Another chart
      </li>
      <li>
        <div class="chart-preview">
          <%= link_to font_awesome('plus-square'), '#' %>
        </div>
        ADD CHART
      </li>
    </ul>

    <ul class="vacancies">
      <% company.vacancies.each do |vacancy| %>
        <li><%= vacancy.name %></li>
      <% end %>
    </ul>
  </div>  
</section>
