<article class="company">
  
  <section class="search">
    
    <h1>
      <%= t '.search', default: 'Search Companies' %>
    </h1>
    
    <%= form_tag :search_companies do -%>
      <%= text_field_tag :query, params[:query], placeholder: t('.query_placeholder', default: "Name, s'il vous plaÃ®t") %>
      <%= select_tag :country, country_options_for_select(params[:country]), prompt: t('.country_prompt', default: 'Choose Country') %>
      <%= font_awesome "chevron-down" %>
      <%= select_tag :industry_id, options_for_select(industries_collection_for_select, selected: params[:industry_id]), prompt: t('.industry_prompt', default: 'Choose Industry') %>
      <%= font_awesome "chevron-down" %>
    <%- end -%>

  </section>

  <section>
    <h2>Result size</h2>

    <% @companies.each do |company| %>
      <div>
        <%= link_to image_tag(company.logo.try(:image_url)), company %>
        <%= link_to company.name, company %>
        <%= company.country %>
        <%= company.industry.name %>
      </div>
    <% end %>
  </section>
  
</article>

