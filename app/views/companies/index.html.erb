<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= image_tag company.logo.try(:image_url) %></td>
        <td><%= company.name %></td>
        <td><%= company.description %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
  <%= link_to 'New Company', new_company_path %>
</p>

<% if current_user %>
  <p>
    <% if current_user.tokens.where(name: 'facebook').any? %>
      <%= link_to 'Destroy Facebook auth', provider_destroy_path(:facebook) %>
    <% else %>
      <%= link_to 'Facebook auth', provider_path(:facebook) %>
    <% end %>
  </p>

  <p>
    <% if current_user.tokens.where(name: 'linkedin').any? %>
      <%= link_to 'Destroy Linkedin auth', provider_destroy_path(:linkedin) %>
    <% else %>
      <%= link_to 'Linkedin auth', provider_path(:linkedin) %>
    <% end %>    
  </p>
<% end %>
