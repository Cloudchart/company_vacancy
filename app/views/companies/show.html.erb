<% content_for :meta do %>
  <meta property="og:title" content="<%= decorate(@company).og_name %>" />
  <meta property="og:image" content="<%= @company.logotype.try(:url, host: request.protocol + request.host) || image_url('cloudchart-logo-square.png') %>">
  <meta property="og:url" content="<%= company_url(@company) %>" />
  <meta property="og:description" content="<%= @company.description %>" />
<% end %>

<% content_for :header_breadcrumbs do %>
  <%= render 'shared/companies/header_breadcrumbs' %>
<% end %>

<% content_for :header_menu do %>
  <%= render 'shared/companies/header_menu' %>
<% end %>


<%= content_for :react_class_for_main, 'components/company_app' %>
<%= content_for :react_props_for_main, { key: @company.uuid, invitable_roles: Company::INVITABLE_ROLES }.to_json %>


<%- pagescript_params(id: @company.uuid) -%>
