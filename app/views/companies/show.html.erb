<% content_for :meta do %>
  <meta property="og:title" content="<%= og_company_name(@company) %>" />
  <meta property="og:image" content="<%= @company.logotype.try(:url, host: request.protocol + request.host) || image_url('cloudchart-logo-square.png') %>">
  <meta property="og:url" content="<%= company_url(@company) %>" />
  <meta property="og:description" content="<%= CompanyDecorator.new(@company).about || @company.description %>" />
<% end %>

<%- content_for :header_breadcrumbs do -%>
<%- end -%>

<%-
  pagescript_params(
    company:        CompanyEditorSerializer.new(@company).as_json(root: false),
    placeholders:   I18n.t('shared.editable_blocks'),
    countries:      ActionView::Helpers::FormOptionsHelper::COUNTRIES,
    industries:     ActiveModel::ArraySerializer.new(Industry.all),
    is_owner:       can?(:update, @company)
  )
-%>
