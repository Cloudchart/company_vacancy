<% present @company do |company| %>
  <div class="companies-wrapper">
    <nav>
      <p>
        <%= company.logo %>
      </p>
      <p>
        <%= company.description %>
      </p>

      <ul class="company-sections">
        <% Company::SECTIONS.each do |key, value| %>
          <li><%= link_to key, "##{value}" %></li>
        <% end %>    
      </ul>
      
    </nav>

    <article>
      <% Company::SECTIONS.each do |title, section| %>
        <h2 class="<%= company.empty_or_filled_section(section) %>" id="<%= section %>">
          <%= title %>
        </h2>
        <section>
          <%= render "companies/sections/#{section}", company: company %>
        </section>
      <% end %>

      <div class="temporary_nav">
        <%= link_to 'Edit', edit_company_path(@company) %> |
        <%= link_to 'Back', companies_path %> |
        <%= link_to 'Vacancies', company_vacancies_path(@company) %> |
        <%= link_to 'Add vacancy', new_company_vacancy_path(@company) %>
      </div>
      
    </article>

    <aside class="blocks">
      <ul class="block-types">
        <% Block::TYPES.each do |key, val| %>
          <li><%= key %></li>
        <% end %>
      </ul>

    </aside>

  </div>

<% end %>
