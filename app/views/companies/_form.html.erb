<%= simple_form_for @company do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= image_tag f.object.logo.image.thumb.url if f.object.logo.present? %>
    <%= f.simple_fields_for :logo, @company.logo.present? ? @company.logo : @company.build_logo, include_id: false do |logo| %>
      <%= logo.input :image %>
    <% end %>

    <%= f.input :name %>

    <%= f.simple_fields_for :industries, @company.industries.any? ? @company.industries : @company.industries.build, include_id: false do |industry| %>
      <%= industry.input :name, collection: industries_collection_for_select, label: t('lexicon.industry'), prompt: t('simple_form.placeholders.industry') %>
    <% end %>

    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  
<% end %>
