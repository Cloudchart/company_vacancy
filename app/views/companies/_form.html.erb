<%= form_for @company do |form| -%>


  <div class="input-with-logo">
    
    <label class="logo image">
      <%- form.object.build_logo unless form.object.logo.present? -%>
      <%= form.fields_for :logo do |logo_fields| %>
        <%= logo_fields.file_field :image %>
      <%- end -%>
      <%= t('.logo_placeholder', default: 'drag<br />logo<br />here').html_safe %>
    </label>
    
    <div class="input">
      <%= form.text_field :name, placeholder: t('.name_placeholder', default: 'Company Name'), class: :cloud %>
    </div>
    
  </div>
  
  <label>
    <%= form.country_select :country, nil, {}, class: :cloud %>
  </label>

  <label>
    <%= form.select :industry_ids, industries_collection_for_select, {}, class: :cloud %>
  </label>

  <button class="cloud">
    <%= font_awesome 'building-o' %>
    <%= t '.button_title', default: 'Create Company' %>
  </button>

<%- end -%>

