<%= simple_form_for @company do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= display_logo(f.object) %>

    <%= f.simple_fields_for :logo, @company.logo.present? ? @company.logo : @company.build_logo, include_id: false do |logo| %>
      <%= logo.input :image %>
    <% end %>

    <%= f.input :name %>
    <%= f.input :country, collection: Country.all.sort, prompt: t('simple_form.prompts.country') %>
    <%= f.input :industry_ids, collection: full_industries_collection, label: t('lexicon.industry'), prompt: t('simple_form.prompts.industry') %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  
<% end %>
