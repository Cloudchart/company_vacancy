<%= content_for :class_for_main, 'pinboards' %>

<% content_for :header_menu do %>
  <%= render 'shared/header_menu' %>
<% end %>

<% content_for :header_breadcrumbs do %>
  <div class="breadcrumbs">
    <%= link_to main_app.pinboard_path(@pinboard), class: 'back-link' do -%>
      <i class="fa fa-chevron-left"></i>
    <% end %>

    <div class="company-name">
      <span>
        <%= @pinboard.title %>
      </span>
    </div>
  </div>
<% end %>

<article class="pinboard" data-react-class="components/insights_app" data-react-props="<%= { uuid: params[:id], action: :settings }.to_json %>">
</article>
