<h1>Listing vacancies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Salary</th>
      <th>Location</th>
      <th>Company</th>
      <th>Accessible to</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vacancies.each do |vacancy| %>
      <% if can?(:read, vacancy) %>
        <tr>
          <td><%= vacancy.name %></td>
          <td><%= vacancy.description %></td>
          <td><%= vacancy.salary %></td>
          <td><%= vacancy.location %></td>
          <td><%= vacancy.company.name %></td>
          <td><%= t(".#{vacancy.settings.accessible_to}") if vacancy.settings.accessible_to.present? %></td>
          <td>
            <% if can?(:create, vacancy.responses.build) %>
              <%= link_to 'Respond', new_vacancy_response_path(vacancy) %>
            <% elsif current_user.blank? %>
              <%= link_to 'Respond', cloud_profile.login_path %>
            <% end %>
          </td>
          <td><%= link_to 'Show', vacancy %></td>
          <td><%= link_to 'Destroy', vacancy, method: :delete, data: { confirm: 'Are you sure?' } if can?(:destroy, vacancy) %></td>
        </tr>
      <% end %>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vacancy', new_company_vacancy_path %>
