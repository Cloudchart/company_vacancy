<div id="<%= block.id %>" class="<%= block.identity_name %> identity-block <%= 'locked' if block.is_locked? -%>">

  <% if can?(:update, block.owner) %>
    <div class="handle" data-behaviour="circular-popup-trigger" data-buttons="C:circle-o:close,N:arrow-up:move_up,S:arrow-down:move_down,E:times:delete">
      <i class="fa fa-bars"></i>
    </div>
  <% end %>

  <% blocks = can?(:update, block.owner) ? 'editable_blocks' : 'blocks' %>
  <%= render "shared/#{blocks}/#{block.identity_type.underscore}", block: block %>
  
</div>
