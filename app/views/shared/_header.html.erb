<div class="cloud-chart">
  <%= link_to :root do %>
    <div class="logo"><i class="fa fa-star"></i></div>
    <div class="name">
      Cloud<strong>Chart</strong>
    </div>
  <% end %>
</div>

<div class="login-and-signup">
  <% if current_user %>
    <%= link_to current_user.email, current_user %>
    <%= link_to t('lexicon.logout'), logout_path %>
  <% else %>
    <%= link_to t('lexicon.login'), login_path %>
    <%= link_to content_tag(:i, nil, class: 'fa fa-pencil') + t('lexicon.sign_up'), sign_up_path, class: 'button green-button' %>
  <% end %>
</div>
