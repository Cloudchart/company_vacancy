<% if content_for(:header_breadcrumbs).present? %>
  <%= yield :header_breadcrumbs %>
<% else %>
  <%= link_to "", main_app.root_path, class: 'logo' %>
  <div data-header-react-mount-point>
    <%= link_to main_app.root_path, class: 'title' do %>
      <%= app_name_for_header %>
    <% end %>
  </div>
<% end %>

<%= yield :header_menu %>

<div class="spacer"></div>

<% if can?(:index, Company) %>
  <div class="browse-companies">
    <%= link_to 'Companies', main_app.companies_path, class: 'base strong' %>
  </div>
<% end %>

