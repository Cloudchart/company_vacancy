<%- block.block_identities.build if block.block_identities.empty? -%>

<%- block.block_identities.each do |block_identity| -%>

  <%= form_for block_identity, url: '' do |form| %>
    <%= form.hidden_field :block_id %>
    <%- identity = block_identity.identity || block.identity_class.new -%>
    
    <%= form.fields_for identity do |identity_form| %>
      <%= identity_form.text_area :content, rows: 5, style: 'width: 100%;' %>
    <%- end -%>
    
  <%- end -%>

<%- end -%>
