<%- block.block_identities.build if block.block_identities.empty? -%>

<%= form_for block do |form| %>

  <%= form.fields_for :block_identities do |block_identity_form| %>
    <%= debug block_identity_form.object_name %>

    <%- identity = block_identity_form.object.identity || block.identity_class.new -%>

    <%= block_identity_form.fields_for identity do |identity_form| %>
      <%= debug identity_form.object_name %>
    <%- end -%>

  <%- end -%>

<%- end -%>
