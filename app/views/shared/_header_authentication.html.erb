<%- if user_authenticated? -%>

  <%= link_to current_user.full_name_or_email, cloud_profile.root_path, class: :profile %>
  <%= link_to font_awesome('external-link-square'), cloud_profile.logout_path, class: 'sign-out orgpad-button header square' %>

<%- else -%>

  <%= link_to cloud_profile.login_path, class: 'sign-up orgpad-button header' do -%>
    <span>Sign Up</span>
    <%= font_awesome('pencil') %>
  <%- end -%>

<%- end -%>
