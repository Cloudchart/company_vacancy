<p>
  <strong>Uuid:</strong>
  <%= @person.uuid %>
</p>

<p>
  <strong>Name:</strong>
  <%= @person.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @person.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @person.phone %>
</p>

<p>
  <strong>User:</strong>
  <%= @person.user.try(:name) %>
</p>

<p>
  <strong>Company:</strong>
  <%= @person.company.name %>
</p>

<p>
  <strong>Occupation:</strong>
  <%= @person.occupation %>
</p>

<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', company_people_path(@person.company) %>

<p>
  <%= form_tag send_invite_to_user_person_path(@person) do %>
    <%= text_field_tag :email %>
    <%= submit_tag 'Invite user' %>
  <% end %>
</p>
