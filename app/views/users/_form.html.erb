<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :avatar unless @user.new_record? %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, required: true %>
    <%= f.input :phone unless @user.new_record? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
