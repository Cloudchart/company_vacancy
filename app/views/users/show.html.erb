<h1>Profile</h1>

<p>
  <strong>Avatar:</strong>
  <%= image_tag @user.avatar.try(:image_url) %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<h1>History</h1>

<ul>
  <% @versions.each do |version| %>
    <li>
      <%= version.item_type %> |
      <%= version.event %> |
      <%= version.created_at %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_user_path(@user) %>
