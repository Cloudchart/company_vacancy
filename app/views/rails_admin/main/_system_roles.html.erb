<%= hidden_field_tag "user[system_role_ids][]", @object == current_user ? 'admin' : nil %>

<% Cloudchart::ROLES.map(&:to_s).each do |value| %>
  <%= check_box_tag "user[system_role_ids][]", value, @object.system_roles.map(&:value).include?(value), id: value, disabled: @object == current_user && value == 'admin' %>
  <%= label_tag value, value.humanize %><br>
<% end %>
