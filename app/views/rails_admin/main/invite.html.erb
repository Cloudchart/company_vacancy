<%= form_tag invite_path, multipart: true, class: 'form-horizontal denser', data: { title: @page_name } do |f| %>

  <fieldset>
    <div class="form-group control-group string_type full_name_field">
      <%= label_tag :full_name, 'Full name', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= text_field_tag :full_name, nil, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group control-group email_type email_field">
      <%= label_tag :email, 'Email', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10 controls">
        <%= email_field_tag :email, nil, class: 'form-control' %>
      </div>
    </div>
  </fieldset>

  <%= render 'submit_buttons' %>

<% end %>
