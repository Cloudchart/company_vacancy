<%= form_for @chart do |form| %>
  
  <label>
    <%= form.text_field :title, placeholder: t('.title_placeholder', default: 'Chart Title') %>
  </label>

  <br />
  
  <label>
    <%= form.select :company_id, @companies.map { |company| [company.name, company.to_param] } %>
  </label>
  
  <br />
  
  <button class="cloud">
    <%= font_awesome 'flash' %>
    <%= t '.button_title', default: 'Create Chart' %>
  </button>

<%- end -%>
