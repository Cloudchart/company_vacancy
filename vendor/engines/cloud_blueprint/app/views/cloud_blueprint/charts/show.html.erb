<% content_for :meta do %>
  <meta property="og:title" content="<%= @chart.company.name %> > <%= @chart.title %>" />
  <meta property="og:image" content="<%= @chart.company.logotype.try(:url, host: request.protocol + request.host) || image_url('cloudchart-logo-square.png') %>">
  <meta property="og:url" content="<%= company_chart_url(@chart.company, @chart) %>" />
  <meta property="og:description" content="<%= CompanyDecorator.new(@chart.company).about || @chart.company.description %>" />
<% end %>

<% class_for_root_tag header: 'white blueprint', main: :blueprint, footer: :blueprint %>

<% pagescript_params(
  id:           @chart.id,
  chart:        @chart,
  url:          chart_path(@chart.id),
  company_url:  main_app.company_path(@chart.company),
  company_name: @chart.company.name
) %>

<% content_for :title do %>
    <%= link_to main_app.company_path(@chart.company), class: 'title' do -%>
      <%= @chart.company.name %>
      <%= font_awesome 'angle-right' %>
    <%- end -%>
    <div data-header-chart-title-mount-point>
      <span class="title"><small><%= @chart.title %></small></span>
    </div>
<% end %>
