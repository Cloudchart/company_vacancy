<% content_for :meta do %>
  <meta property="og:title" content="<%= decorate(@company).og_name %> > Chart" />
  <meta property="og:image" content="<%= @chart.company.logotype.try(:url, host: request.protocol + request.host) || image_url('cloudchart-logo-square.png') %>">
  <meta property="og:url" content="<%= company_chart_url(@chart.company, @chart) %>" />
  <meta property="og:description" content="<%= @chart.company.description %>" />
<% end %>

<% class_for_root_tag header: 'white blueprint', main: :blueprint, footer: :blueprint %>

<% content_for :header_breadcrumbs do %>
  <%= render 'shared/companies/header_breadcrumbs' %>
<% end %>

<% content_for :header_menu do %>
  <%= render 'shared/companies/header_menu' %>
<% end %>

<% pagescript_params(
  id:           @chart.id,
  chart:        @chart,
  url:          chart_path(@chart.id),
  company_url:  main_app.company_path(@chart.company),
  company_name: @chart.company.name
) %>
