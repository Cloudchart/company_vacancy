<%= form_for current_user, url: :profile_activation_completion do |form| -%>

  
  <label class="avatar" for="avatar-file-field">
    <span class="placeholder">
      <%= t '.avatar_placeholder', default: 'drag<br />avatar<br />here'.html_safe %>
    </span>
  </label>
  

  <div class="name">
    <label class="first-name">
      <%= form.text_field :first_name, class: :cloud, placeholder: t('.first_name_placeholder', default: 'Name'), autofocus: true %>
    </label>
  
    <label class="last-name">
      <%= form.text_field :last_name, class: :cloud, placeholder: t('.last_name_placeholder', default: 'Surname') %>
    </label>
  </div>
  
  <label class="email">
    <%= current_user.emails.first.address %>
  </label>
  
  <button class="cloud">
    <%= font_awesome 'magic' %>
    <%= t '.button_title', default: 'Start using OrgPad' %>
  </button>

<%- end -%>

<%= file_field_tag :image, id: 'avatar-file-field', data: { url: '', behaviour: 'self-uploading-file' } %>
