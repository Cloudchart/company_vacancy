<%= form_tag register_path(social_network_id: params[:social_network_id]) do %>

  
  <%= render partial: 'social_network' %>
  

  <%- email_autofocus = @email.address.blank? || @email.invalid? -%>


  <label>
    <%= text_field_tag :email, @email.address, autocomplete: :off, autofocus: email_autofocus, placeholder: t('.email_placeholder', default: 'E-mail') %>
  </label>
  
  <label>
    <%= password_field_tag :password, nil, autofocus: !email_autofocus, placeholder: t('.password_placeholder', default: 'Choose a password') %>
  </label>
  
  <button>
    <%= font_awesome('magic') %>
    <%= t '.start', default: 'Start using CloudChart' %>
  </button>

<%- end -%>
