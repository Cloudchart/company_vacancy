<%- if @social_network.present? -%>

  <div class="social-network">
    
    <div class="avatar">
      <span class="fa fa-stack icon">
        <i class="fa fa-square fa-stack-1x fa-inverse"></i>
        <i class="fa fa-<%= @social_network.name %>-square fa-stack-1x"></i>
      </span>
      <img src="<%= @social_network.picture %>" />
    </div>


    <ul>
      <li class="first-name">
        <%= @social_network.first_name %>
      </li>

      <li class="last-name">
        <%= @social_network.last_name %>
      </li>

      <li class="link">
        <%= t '.linked_account', default: 'Linked Account' %>
        <%= link_to '&times;'.html_safe, register_path, class: 'unlink-social-network' %>
      </li>
    </ul>


  </div>
  
<%- end -%>
