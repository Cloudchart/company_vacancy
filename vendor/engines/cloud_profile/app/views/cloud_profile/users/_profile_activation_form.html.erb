<%= form_tag profile_activation_path(token: params[:token]) do -%>


  <p class="email">
    <%= @email.address %>
  </p>
  

  <%= content_tag :label, class: @password_invalid ? :error : nil do -%>
    <%- if @password_invalid -%>
      <span class="error"><i><%= t '.password.error', default: 'Wrong password' %></i></span>
    <%- end -%>
    <%= password_field_tag :password, nil, autofocus: true, placeholder: t('.password.placeholder', default: 'Enter password') %>
  <%- end -%>


  <button>
    <%= font_awesome 'magic' %>
    <%= t '.button.title', default: 'Start using CloudChart' %>
  </button>


<%- end -%>
