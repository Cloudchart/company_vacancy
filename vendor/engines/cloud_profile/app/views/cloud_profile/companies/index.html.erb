<%- class_for_main 'cloud-profile' -%>
<%- cloud_profile_nav_current_tab :companies -%>
<%= render 'shared/nav' %>

<article>
  <ul>
    <%- @companies.select { |company| !company.is_empty? }.each do |company| -%>
      <li>
        <%= link_to display_logo(company), main_app.company_path(company) if display_logo(company) %>
        <%= link_to company.name, main_app.company_path(company) %>
        <%= company.country %>
        <%= company.industry.name %>
        <%= link_to 'Edit', main_app.edit_company_path(company) if can?(:edit, company) %>
        <%= link_to 'Destroy', main_app.company_path(company), method: :delete, data: { confirm: 'Are you sure?' } if can?(:destroy, company) %>
      </li>
    <%- end -%>
  </ul>

  <div style="margin-top: 50px;">
    <%= link_to 'New Company', main_app.new_company_path %>
  </div>
</article>
