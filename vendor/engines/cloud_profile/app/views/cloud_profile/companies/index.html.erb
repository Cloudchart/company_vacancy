<%- class_for_main 'cloud-profile' -%>
<%- cloud_profile_nav_current_tab :companies -%>
<%= render 'shared/nav' %>

<article>
  <ul>
    <%#= render partial: 'shared/companies/company', collection: @companies.select { |company| !company.is_empty? } %>
    <%- @companies.select { |company| !company.is_empty? }.each do |company| -%>
      <li>
        <%= image_tag company.logo.image.url, width: '200px' %>
        <br />
        <%= link_to company.name, main_app.edit_company_path(company) %>
        <br />
        <%= company.country %>
        <br />
        <%= company.industry.name %>
      </li>
    <%- end -%>
  </ul>

  <div style="margin-top: 50px;">
    <%= link_to 'New Company', main_app.new_company_path %>
  </div>
</article>
