<%= form_tag verify_email_path do -%>

  <label>
    <%= text_field_tag :email, @email.address, disabled: true %>
  </label>
  
  <%- error = @password_invalid ? t('.password_invalid', default: 'Wrong password') : nil -%>
  <label>
    <%= content_tag(:span, content_tag(:i, error), class: 'error') if error.present? %>
    <%= password_field_tag :password, nil, autofocus: true, placeholder: t('.password_placeholder', default: 'Enter password') %>
  </label>
  
  <button>
    <%= font_awesome('magic') %>
    <%= t '.button_title', default: 'Verify e-mail' %>
  </button>

<%- end -%>
