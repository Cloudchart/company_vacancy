<li class="form">
  <%= form_for email || CloudProfile::Email.new do |form| -%>
    <label>
      <%= link_to font_awesome('times'), '', class: :cancel %>
      <%= form.text_field :address, autofocus: true, autocomplete: :off, placeholder: t('.email_placeholder', default: 'E-mail') %>
      <button>
        <%= font_awesome 'plus' %>
      </button>
      <span class="error"><i><%= first_error email, :address %></i></span>
    </label>
  <%- end -%>
</li>
