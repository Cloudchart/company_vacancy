<%= form_for email, data: { remote: true } do |form| -%>
  <%- error = first_error email, :address -%>
  <%= content_tag(:span, content_tag(:i, error), class: 'error right') if error.present? %>

  <%= form.text_field :address, autofocus: true, autocomplete: :off, placeholder: t('.email_placeholder', default: 'E-mail') %>

  <button>
    <%= font_awesome 'magic' %>
  </button>

  <%= link_to font_awesome('times-circle'), '', class: :cancel %>
<%- end -%>
