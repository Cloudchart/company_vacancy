<%= form_for @email do |f| -%>
  
  <label>
    <span><i><%= @email.errors.full_messages_for(:address).first %></i></span>
    <%= f.text_field :address, autofocus: true, autocomplete: :off %>
  </label>
  
  <button>
    <%= font_awesome 'magic' %>
    <%= t '.button-title', default: 'Add new e-mail' %>
  </button>
  
<% end -%>