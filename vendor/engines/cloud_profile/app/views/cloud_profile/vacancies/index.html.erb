<%- class_for_main 'cloud-profile' -%>
<%- cloud_profile_nav_current_tab :vacancies -%>
<%= render 'shared/nav' %>

<ul>
  <% @vacancies.each do |vacancy| %>
    <% if can?(:read, vacancy) %>
      <li>
        <%= link_to vacancy.company.name, main_app.company_path(vacancy.company) %> |
        <%= link_to vacancy.name, main_app.vacancy_path(vacancy) %> |
        <%= link_to 'Responses', main_app.vacancy_responses_path(vacancy) if vacancy.responded_users.any? %>
      </li>
    <% end %>
  <% end %>
</ul>
