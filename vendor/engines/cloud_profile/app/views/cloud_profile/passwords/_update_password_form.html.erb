<%= form_tag :password, method: :put do %>

  <%- error = first_error current_user, :current_password -%>
  <label>
    <%= content_tag(:span, content_tag(:i, error), class: 'error right') if error.present? %>
    <%= password_field_tag :current_password, nil, autofocus: true, placeholder: t('.current_password', default: 'Current password') %>
  </label>
  
  <%- error = first_error current_user, :password -%>
  <label>
    <%= content_tag(:span, content_tag(:i, error), class: 'error right') if error.present? %>
    <%= password_field_tag :password, nil, placeholder: t('.password', default: 'New password') %>
  </label>

  <%- error = first_error current_user, :password_confirmation -%>
  <label>
    <%= content_tag(:span, content_tag(:i, error), class: 'error right') if error.present? %>
    <%= password_field_tag :password_confirmation, nil, placeholder: t('.password_confirmation', default: 'New password confirmation') %>
  </label>
  
  <button>
    <%= font_awesome 'magic' %>
    <%= t '.update_password', default: 'Update password' %>
  </button>

<%- end -%>
