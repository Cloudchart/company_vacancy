<%= form_tag :forgot_password, method: :post do %>

  <%- error = @email.present? && first_error(@email, :address) -%>
  <label>
    <%= content_tag(:span, content_tag(:i, error), class: 'error') if error.present? %>
    <%= text_field_tag :address, params[:address], autofocus: true, placeholder: t('.email_placeholder', default: 'Your email address.') %>
  </label>

  <p>
    <%= t '.notice', default: "We don't store passwords as plain text, so we can send you the link to set a new one." %>
  </p>

  <button>
    <%= font_awesome 'magic' %>
    <%= t '.button', default: 'Send reset link' %>
  </button>

<%- end -%>
