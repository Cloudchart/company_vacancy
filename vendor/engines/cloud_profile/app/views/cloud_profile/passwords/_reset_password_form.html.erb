<%= form_tag :password_reset do %>

  
  <label>
    <%= text_field_tag :address, @token.data[:address], disabled: true %>
  </label>
  
  
  <%= fields_for @user || User.new do |user_fields| %>
    
    <%- error = first_error user_fields.object, :password -%>
    <label>
      <%= content_tag(:span, content_tag(:i, error), class: 'error') if error.present? %>
      <%= user_fields.password_field :password, autofocus: true, placeholder: t('.password_placeholder', default: 'Password') %>
    </label>
    
    <%- error = first_error user_fields.object, :password_confirmation -%>
    <label>
      <%= content_tag(:span, content_tag(:i, error), class: 'error') if error.present? %>
      <%= user_fields.password_field :password_confirmation, placeholder: t('.password_confirmation_placeholder', default: 'Password confirmation') %>
    </label>

  <%- end -%>
  

  <button>
    <%= font_awesome 'magic' %>
    <%= t '.button_title', default: 'Reset password' %>
  </button>

<%- end -%>
