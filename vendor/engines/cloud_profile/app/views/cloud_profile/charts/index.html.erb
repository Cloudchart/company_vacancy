<%- class_for_main 'cloud-profile' -%>
<%- cloud_profile_nav_current_tab :charts -%>
<%= render 'shared/nav' %>

<article>
  
  <section>
    
    <h1>
      <%= t '.title', default: 'Charts' %>
    </h1>
    
    <ul>
      <%- current_user.charts.includes(:company).each do |chart| -%>
        <li>
          <%= link_to chart.title, cloud_blueprint.chart_path(chart) %>
          <%= chart.company.name %>
          <%= link_to font_awesome('times'), "" %>
        </li>
      <%- end -%>

      <li class="new">
        <%= link_to "Add a chart", cloud_blueprint.new_chart_path %>
      </li>
    </ul>
    
  </section>
  
</article>
