<%- class_for_main 'cloud-profile' %>

<article class="form">
  <section class="login">
  
    <h1>
      <%= link_to font_awesome('angle-left'), :login %>
      Login
    </h1>

    <%= form_tag :login do %>
      <p class="email">
        <%= params[:email] %>
      </p>

      <label>
        <%= hidden_field_tag :email, params[:email] %>
      </label>

      <label>
        <%= password_field_tag :password, nil, autofocus: true, placeholder: t('.password_placeholder', default: 'Enter password') %>
      </label>
    
      <p>
        <%= link_to t('.forgot_password', default: 'Forgot your password?'), :forgot_password %>
      </p>
    
      <button>
        <%= t '.start', default: 'Start using CloudChart' %>
      </button>
    <%- end -%>

  </section>
</article>
