<form action="<%= login_path %>" class="login-or-register" method="get">

  <%= content_tag :label, data: { behaviour: 'error-toggle' }, class: @email.invalid? && params.keys.include?('email') ? :error : nil do %>
    <span class="error"><i>Doesn't look like an e-mail to us.</i></span>
    <%= text_field_tag :email, @email.address, autocomplete: :off, autofocus: true, placeholder: t('.email', default: 'E-mail') %>
  <%- end -%>

  <button>
    <%= font_awesome('magic') %>
  </button>

</form>

