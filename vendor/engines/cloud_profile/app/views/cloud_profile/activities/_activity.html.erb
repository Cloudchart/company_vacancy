<section style="font-size: 14pt;">
  <% if activity.subscriber_id.present? %>
    <%= activity.action == 'respond' ? activity.user.full_name : activity.trackable.company.name %>
  <% elsif current_user == activity.user %> 
    <%= link_to 'You', root_path(current_user) %>
  <% else %>
    <%= activity.user.full_name %>
  <% end %>

  <%= activity.action.sub(/e?$/, 'ed') %>

  <%= activity_message(activity) %>

  <%= time_ago_in_words(activity.updated_at) %>
  ago
</section>
